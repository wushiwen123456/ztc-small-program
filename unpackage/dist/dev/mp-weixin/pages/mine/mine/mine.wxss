
page{
	background-color: #f3f3f3;
}
.home-activity{
	width: 100%;
	margin: 20rpx 0;
	height: 182rpx;
}
.mine-head{
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx 40rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.headImg{
	width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
}
.headImg ._img{
	border-radius: 50%;
}
.user{
	margin-left: 36rpx;
}
.user .name{
	font-size: 40rpx;
	color: #333333;
}
.user .update{
	background-color: #fff5e4;
	border-radius: 6rpx;
	font-size: 22rpx;
	color: #b88634;
	padding: 0 20rpx;
}
.order{
	padding: 10rpx 30rpx;
	background-color: #fff;
	position: relative;
}
.order .left{
	color: #333333;
	font-size: 32rpx;
}
.order .right{
	right: 30rpx;
	font-size: 28rpx;
	top:20rpx;
}
.orderDetail{
	 background-color: #fff;
	 padding: 20rpx 0;
}
.orderDetail .detail{
	display: inline-block;
	width: 25%;
	text-align: center;
	margin-top: 20rpx;
	position: relative;
}
.orderDetail .detail .dot{
	position: absolute;
	top:-16rpx;
	right: 38rpx;
	border: solid 2rpx #dd3e34;
	background-color: #fff;
	font-size: 24rpx;
	color: #dd3e34;
	border-radius: 30rpx;
	padding: 0 10rpx;
	height: 32rpx;
	line-height: 32rpx;
}
.orderDetail .detail ._img{
	width: 48rpx;
	height: 48rpx;
}
.orderDetail .detail view{
	margin-top: -10rpx;
}
.other{
	margin-top: 20rpx;
}

